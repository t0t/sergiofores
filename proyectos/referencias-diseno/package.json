{
  "name": "referencias-diseno",
  "version": "1.0.0",
  "description": "Showcase curado de referencias de diseño web con screenshots automatizados",
  "main": "screenshot-generator.js",
  "scripts": {
    "dev": "python3 -m http.server 8000",
    "screenshots": "python3 scripts/screenshot_generator.py",
    "screenshots:js": "node scripts/screenshot-generator.js", 
    "verify": "python3 scripts/verify_screenshots.py",
    "setup": "./scripts/setup.sh",
    "build": "echo 'Static site - no build needed'",
    "clean": "rm -rf node_modules package-lock.json && npm install"
  },
  "keywords": [
    "design",
    "web",
    "references",
    "screenshots",
    "showcase"
  ],
  "author": "Sergio Forés",
  "license": "MIT",
  "dependencies": {
    "puppeteer": "^24.12.1"
  }
}
