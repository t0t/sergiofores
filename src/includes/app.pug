.section--form

  #grafica
    .output

  .grid.form-group
    .form-group__item
      label(for='entrada') Traduce palabras /nombres o frases:
      input#entrada(type='text' placeholder='Escribe algo...' value='' onfocus=`this.placeholder="";this.value=""`)

    .form-group__item
      label(for='fechanacimiento') Frecuencia fecha nacimiento:
      input#fechanacimiento(type='date' min='1930-12-12' max='2100-12-12' value="1975-07-16")
      
    input#lanza(type='submit' value='Generar')

  section

    dl.codigos-ejemplo
        each codigo in codigos
            dt= codigo.palabra
                | &nbsp;
                span= codigo.frecuencia
            dd= codigo.descripcion
