extends base

block append head
  - var current = "DEV";
  title #{sitename} - #{current}
  meta(name="description" content="Aporto una perspectiva multidimensional, transdisciplinar y holistica de la Creación para encontrarnos a nosotros mismos en el contexto desde el vacío.")

  
block pageheader
  main(title="covertitle")
    h1= page_dev.titulo

  aside(title="coverimg")
    img(src=`${baseUrl + page_dev.plastica[0]}` alt='Cover image')

  header(title="sintesis")
    h2= page_dev.subtitulo

block content
  section(title="vision").grid
    .slider--container
      .slider1.card.cardInvert.cardRotate
        h3= page_dev.headings.h1
        ul 
          each d1 in page_dev.bloque1
            li= `${d1}`

      .slider1.card.cardInvert.cardRotate
        h3 Me doy <mark> cuenta</mark> de mí
        ul 
          each d2 in page_dev.bloque2
            li= `${d2}`

      .slider1.card.cardInvert.cardRotate
        h3 Percibo en <mark> 0,1,2,3 y 4</mark>
        ul 
          each d3 in page_dev.bloque3
            li= `${d3}`

      .slider1.card.cardInvert.cardRotate
        h3 Llego a mí
        ul 
          each d4 in page_dev.bloque4
            li= `${d4}`

      button.btn--slider#submit-btn(onclick='plusDivs(-1, 0)') &#x276E;
      button.btn--slider#submit-btn(onclick='plusDivs(1, 0)') &#x276F;

  section.grid(title="percepcion")
    article.grid-12.grid-md-6(title="obvio")
      .slider--container
        each imgUrl in page_dev.percepcion
          .slider2.bgImg(style='background-image: url('+`${baseUrl + imgUrl}`+');')
        button.btn--slider(onclick='plusDivs(-1, 1)') &#x276E;
        button.btn--slider(onclick=`plusDivs(1, 1)`) &#x276F;

    article.grid-12.grid-md-6(title="yocuento").placeself
      .card
        h3 <mark>Yo cuento</mark> en mi transitar.
        ul 
          each d5 in page_dev.bloque5
            li= `${d5}`

  section.grid.grid--1(title="entrenamiento")
    article.grid-12.grid-md-6(title="proceso")
      .slider--container
        .slider3.card
          h3 Abro mi <mark>verdad</mark>
          ul 
            each p in page_dev.proceso1
              li= `${p}`

        button.btn--slider(onclick='plusDivs(-1, 2)') &#x276E;
        button.btn--slider(onclick='plusDivs(1, 2)') &#x276F;
        .slider3.card
          h3 Una obra; <mark>un proceso</mark>.
          ul 
            each p2 in page_dev.proceso2
              li= `${p2}`

    article.grid-12.grid-md-6(title="plastica")
      .slider--container
        each imgUrl in page_dev.plastica
          .slider4.bgImg(style='background-image: url('+`${baseUrl + imgUrl}`+');')
        button.btn--slider(onclick='plusDivs(-1, 3)') &#x276E;
        button.btn--slider(onclick='plusDivs(1, 3)') &#x276F;
    
  section.grid(title="entrenamiento")
    article.grid-12.grid-md-6(title="video")
      video#video1(poster='./assets/img/bg1.jpg' controls='false' loop='true')
        source(src='./assets/img/introweb.mp4' type='video/mp4')
        | Your browser does not support the video tag.  

    article.grid-12.grid-md-6(title="elsersiendo")
      .slider--container
        .slider5.card
          h3 Alumno eterno <mark>nuevo</mark> 
          ul 
            li Dándome cuenta de mí.
            li Afinando <mark>claridad</mark>
            li Honor y gratitud por lo andado hasta aquí
            li Dejo de girar y avanzo
        .slider5.card
          h3 Me planto en mi  <mark>verdad</mark>
          p Cuento todo el rato para darme cuenta y expandirlo. La información ocurriendo completamente. Somos respuesta.
        .slider5.card
          h3 Soy <mark>el ser</mark> siendo
          p Observo un territorio holístico de creación en el que cristaliza todo lo que soy en esta antena humana que no para de resonar y vibrar.
        .slider5.card
          h3 Me <mark>doy cuenta</mark> ...del fractal que lo vincula todo y ahora paso a paso integro coherencia en mi caminar.
        button.btn--slider(onclick='plusDivs(-1, 4)') &#x276E;
        button.btn--slider(onclick='plusDivs(1, 4)') &#x276F;
    
  section.grid(title="sociallinks")
    article.grid-12
      .slider--container
        each imgUrl in page_dev.sobremi
          .slider6.bgImg(style='background-image: url('+`${baseUrl + imgUrl}`+');')
        button.btn--slider(onclick='plusDivs(-1, 5)') &#x276E;
        button.btn--slider(onclick='plusDivs(1, 5)') &#x276F;

