/* Variables del Sistema de Diseño - Inspirado en REFS */
:root {
    /* Breakpoints y Media Queries */
    --breakpoint-mobile: 768px;
    --breakpoint-tablet: 1024px;
    --breakpoint-desktop: 1200px;
    --breakpoint-large: 1400px;
    
    /* Colores Unificados del Sistema */
    --color-black: #000000;           /* Negro puro - único negro del sistema */
    --color-white: #ffffff;           /* Blanco puro - único blanco del sistema */
    --color-cyan: #00FFFF;            /* Cyan puro - único cyan del sistema */
    --color-yellow: #FFD100;          /* Amarillo puro - único amarillo del sistema */
    
    /* Colores principales basados en unificados */
    --color-primary: var(--color-black);
    --color-text: var(--color-black);
    --color-text-light: #6b7280;
    --color-text-meta: #9ca3af;
    --color-surface: var(--color-white);
    --color-surface-alt: #e0e1db;
    --color-border: #d1d1d1;
    
    /* Acentos basados en colores unificados */
    --accent-primary: var(--color-black);
    --accent-cyan: var(--color-cyan);
    --accent-yellow: var(--color-yellow);
    
    /* Compatibilidad - usando colores unificados */
    --turquoise-primary: var(--color-cyan);
    --turquoise-dark: #00CCCC;
    --turquoise-light: #66FFFF;
    
    /* Tonos neutros */
    --neutral-white: var(--color-white);
    --neutral-cream: #FDFBF7;
    --neutral-gray-50: #F8F6F0;
    --neutral-gray-200: #E5E7EB;
    --neutral-gray-400: #9CA3AF;
    --neutral-gray-600: #6B7280;
    --neutral-gray-800: #2C2C2C;
    --neutral-black: var(--color-black);
    
    /* Otros colores */
    --accent-red: #E30613;
    --accent-blue: #0066CC;
    --accent-green: #9CAF88;
    
    /* Tipografía sans moderna inspirada en weaintplastic */
    --font-primary: 'Helvetica Neue', 'Arial', 'Segoe UI', sans-serif;
    --font-mono: 'JetBrains Mono', 'SF Mono', 'Courier New', monospace;
    
    /* Font weights sistema */
    --font-weight-light: 300;
    --font-weight-normal: 400;
    --font-weight-medium: 500;
    --font-weight-semibold: 600;
    --font-weight-bold: 700;
    
    /* Sistema de interletrado - 3 niveles alineados con tamaños de fuente */
    --letter-spacing-small: 0.08em;   /* Para --text-small - más espaciado */
    --letter-spacing-medium: 0.075em; /* Para --text-medium */
    --letter-spacing-large: 0.1em;    /* Para --text-large */
    
    /* Sistema de 3 tamaños jerarquía simplificada - Golden Ratio armónico */
    --text-large: clamp(2.618rem, 5.5vw, 3rem);        /* H1 principal (phi²) más armónico */
    --text-medium: clamp(1.618rem, 3.2vw, 1.82rem);    /* Para todos los títulos (phi) */
    --text-small: clamp(1.125rem, 2.5vw, 1.25rem);     /* Para todo el resto (base) - más grande */
    
    /* Espaciado fluido - Sistema 8px base */
    --space-xs: clamp(0.25rem, 1vw, 0.5rem);
    --space-sm: clamp(0.75rem, 2vw, 1rem);
    --space-md: clamp(1rem, 3vw, 1.5rem);
    --space-lg: clamp(1.5rem, 4vw, 2rem);
    --space-xl: clamp(2rem, 5vw, 3rem);
    --space-2xl: clamp(3rem, 6vw, 4rem);
    --space-3xl: clamp(4rem, 8vw, 6rem);
    --space-4xl: clamp(6rem, 10vw, 8rem);
    
    /* Layout viewport heights */
    --viewport-full: 100vh;
    --viewport-mobile: 100svh; /* Safe viewport height for mobile */
    
    /* Compatibilidad con sistema anterior */
    --space-1: 0.5rem;
    --space-2: 1rem;
    --space-3: 1.5rem;
    --space-4: 2rem;
    --space-6: 3rem;
    --space-8: 4rem;
    --space-12: 6rem;
    --space-16: 8rem;
    
    /* Tipografía fluida mejorada */
    --font-size-xs: clamp(0.75rem, 1.5vw, 0.8rem);
    --font-size-sm: clamp(0.875rem, 2vw, 0.9rem);
    --font-size-base: clamp(1rem, 2.5vw, 1rem);
    --font-size-lg: clamp(1.125rem, 3vw, 1.2rem);
    --font-size-xl: clamp(1.25rem, 4vw, 1.5rem);
    --font-size-2xl: clamp(1.5rem, 5vw, 2rem);
    --font-size-3xl: clamp(2rem, 6vw, 2.5rem);
    --font-size-4xl: clamp(2.5rem, 8vw, 3rem);
    
    /* Compatibilidad */
    --text-base: var(--font-size-base);
    --text-lg: var(--font-size-lg);
    --text-xl: var(--font-size-xl);
    --text-2xl: var(--font-size-2xl);
    --text-3xl: var(--font-size-3xl);
    
    /* Pesos tipográficos */
    --font-weight-light: 300;
    --font-weight-normal: 400;
    --font-weight-medium: 500;
    --font-weight-semibold: 600;
    --font-weight-bold: 700;
    
    /* Alturas de línea */
    --line-height-tight: 1.2;
    --line-height-snug: 1.375;
    --line-height-normal: 1.5;
    --line-height-relaxed: 1.625;
    
    /* Transiciones - cross-browser */
    --transition: all 0.2s ease;
    --transition-slow: all 0.3s ease;
    --transition-fast: all 0.15s ease;
    
    /* Fallbacks para navegadores antiguos */
    --webkit-transition: all 0.2s ease;
    --moz-transition: all 0.2s ease;
    --o-transition: all 0.2s ease;
    
    /* Sin bordes redondeados ni sombras */
    --border-radius: 0;
    --border-radius-sm: 0;
    --border-radius-lg: 0;
}

/* Reset y base */
*, *::before, *::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: var(--font-primary);
    background: #FDFBF7;
    color: var(--neutral-gray-800);
    line-height: 1.7;
    font-size: var(--text-small);
    font-weight: var(--font-weight-normal);
    letter-spacing: var(--letter-spacing-small);
}

/* Se reemplaza por main.main-container arriba */

html {
    scroll-behavior: smooth;
    cursor: none;
}

/* Eliminar cursors nativos - sin !important */
*,
*::before,
*::after {
    cursor: none;
}

/* Elementos interactivos con cursor personalizado */
a,
button,
[role="button"],
.project-card,
input,
textarea,
select {
    cursor: none;
}

/* Cursor personalizado optimizado para performance */
.custom-cursor {
    position: fixed;
    top: 0;
    left: 0;
    width: 20px;
    height: 20px;
    border: 2px solid #ffffff;
    border-radius: 50%;
    pointer-events: none;
    z-index: 9999;
    transition: width 0.1s ease, height 0.1s ease, border-color 0.1s ease;
    /* Performance optimizations */
    will-change: transform;
    transform: translateZ(0);
    backface-visibility: hidden;
}

.custom-cursor-dot {
    position: fixed;
    top: 0;
    left: 0;
    width: 4px;
    height: 4px;
    background: #ffffff;
    border-radius: 50%;
    pointer-events: none;
    z-index: 10000;
    /* Performance optimizations */
    will-change: transform;
    transform: translateZ(0);
    backface-visibility: hidden;
}

/* Estados hover del cursor movidos a media query desktop */

/* Layout containers - siguiendo especificidad correcta */
.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-lg);
}

/* Header container con max-width extendido */
.header .container {
    max-width: 2480px;
}

/* Header container sin padding en mobile */
@media (max-width: 768px) {
    .header .container {
        padding: 0 8px;
    }
    
    .header {
        backdrop-filter: blur(10px);
        background: rgba(0, 0, 0, 0.1);
    }
    
    .header-content {
        padding: 8px 0;
    }
    
    .logo {
        transform: scale(0.8);
    }
    
    .main-nav {
        background: rgba(0, 0, 0, 0.9);
        backdrop-filter: blur(20px);
    }
}

/* Main content container - especificidad mayor sin !important */
main.main-container {
    background: #FDFBF7;
    position: relative;
    z-index: 1;
}

/* Secciones con altura más compacta */
main.main-container section {
    min-height: 50vh;
    display: grid;
    grid-template-rows: auto auto auto;
    justify-items: center;
    align-content: start;
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}

/* Ajustes específicos para móviles reales */
@media (max-width: 768px) {
    main.main-container section {
        min-height: 40vh;
        padding: var(--space-md) var(--space-sm);
    }
    
    main.main-container section .section-title {
        font-size: clamp(1.5rem, 6vw, 2rem);
        margin: 0 0 24px 0;
    }
    
    main.main-container section .section-description {
        font-size: clamp(0.9rem, 3.5vw, 1.1rem);
        margin: 0 0 24px 0;
        line-height: 1.4;
    }
}

/* Book-banner como div: estilos específicos */
main.main-container .book-banner {
    min-height: auto;
    display: block;
    padding: var(--space-6);
    margin: var(--space-md) auto;
}

/* Reset completo de márgenes/paddings para secciones 100vh */
main.main-container section > *:not(.book-banner-content) {
    margin: 0;
    padding: 0;
}

/* Book banner content no debe ser afectado por el reset */
main.main-container .book-banner * {
    margin: revert;
    padding: revert;
}

/* Asegurar que las secciones principales mantengan su espaciado correcto */
main.main-container section:not(.book-banner) {
    scroll-margin-top: 120px; /* Para navegación smooth scroll */
}

/* Mejorar detección de navegación activa */
main.main-container section[id] {
    position: relative;
}

/* Hero section también necesita scroll margin */
#inicio {
    scroll-margin-top: 0;
}

/* Contenedor con padding interno controlado y offset para header */
main.main-container section {
    padding: var(--space-lg) var(--space-lg) var(--space-lg);
}

/* Títulos de sección - Grid positioning */
main.main-container section .section-title {
    margin: 0 0 32px 0;
    padding: 0;
    /* Resetear animaciones que causan problemas de layout */
    opacity: 1;
    transform: none;
    animation: none;
    
    /* Grid positioning */
    align-self: center;
}

/* Descripciones de sección - margen inferior pequeño */
main.main-container section .section-description {
    margin: 0 0 32px 0;
    padding: 0;
}

/* Grids de proyectos - sin margen superior */
main.main-container section .projects-grid {
    margin: 0;
    padding: 0;
}

/* Sistema 01234 Grid en sección SOY - Lista de definición semántica */
.sistema-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: var(--space-md);
    width: 100%;
    margin: var(--space-2xl) 0 0 0;
    padding: 0 var(--space-lg);
    justify-content: center;
    justify-items: center;
    align-items: start;
    box-sizing: border-box;
}

.sistema-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 0;
}

.sistema-svg {
    width: 100%;
    height: 120px;
    max-width: 120px;
    margin-bottom: var(--space-md);
    color: var(--color-black);
    transition: transform 0.3s ease;
}

.sistema-item:hover .sistema-svg {
    transform: scale(1.1);
}

/* Reset para sistema-grid vuelto a la estructura original */

/* Cuadrado sin border-radius y mitad de tamaño */
.geo-square {
    border-radius: 0 !important;
}

/* SVG cuadrado mitad de tamaño en sistema-grid */
.sistema-svg rect {
    rx: 0;
}

.sistema-text {
    font-size: var(--text-small);
    color: var(--color-black);
    font-weight: var(--font-weight-normal);
    letter-spacing: var(--letter-spacing-small);
    line-height: 1.4;
    margin: 0;
    padding: 0;
}

/* Listas de definición anidadas dentro de sistema-text */
.sistema-text dl {
    margin: 0;
    padding: 0;
    text-align: center;
}

.sistema-text dt {
    font-weight: var(--font-weight-medium);
    margin: 0;
    padding: 0;
}

.sistema-text dd {
    font-weight: var(--font-weight-normal);
    margin: 0;
    padding: 0;
    font-size: 0.9em;
    opacity: 0.8;
}

/* Responsive para mobile */
@media (max-width: 768px) {
    .sistema-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: var(--space-md);
        padding: 0 var(--space-md);
        margin: var(--space-lg) 0 0 0;
    }
    
    .sistema-item {
        padding: var(--space-sm);
    }
    
    .sistema-svg {
        width: 80px;
        height: 80px;
        max-width: 80px;
    }
    
    .sistema-text {
        font-size: var(--text-small);
        line-height: 1.3;
    }
    
    .sistema-item:last-child {
        grid-column: 1 / -1;
        justify-self: center;
        max-width: 50%;
    }
}

/* Responsive para pantallas muy pequeñas */
@media (max-width: 480px) {
    .sistema-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: var(--space-sm);
        padding: 0 var(--space-sm);
    }
    
    .sistema-svg {
        width: 60px;
        height: 60px;
        max-width: 60px;
    }
    
    .sistema-text {
        font-size: var(--text-small);
    }
}

/* Sección con storytelling visual inspirado en Seated */
.storytelling-section {
    background: linear-gradient(135deg, var(--color-surface-alt) 0%, var(--color-surface) 100%);
}

/* Header */
.header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: transparent;
    backdrop-filter: none;
    padding: var(--nav-padding-v) 0;  /* --space-3xs-2xs compacto */
    z-index: 1000;
    transform: translateY(0);
    transition: all 0.3s ease;
}

.header.scrolled {
    background: rgba(253, 251, 247, 0.95);
    backdrop-filter: blur(10px);
}

.header.hidden {
    transform: translateY(-100%) !important;
    opacity: 0;
    pointer-events: none;
}


.header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    gap: var(--nav-padding-h);  /* --space-xs-s armonía */
    padding: 0 var(--nav-padding-h);  /* --space-xs-s consistente */
}

.logo {
    display: flex;
    align-items: center;
    gap: var(--detail-space);  /* --space-3xs-2xs micro gap perfecto */
    text-decoration: none;
    color: inherit;
    padding: var(--detail-space);  /* --space-3xs-2xs táctil consistente */
}

/* Logo no debe cambiar el cursor personalizado */
.logo.logo-link {
    cursor: pointer;
}

.geo-shape {
    transition: transform 0.3s ease;
}

.geo-shape:hover {
    transform: scale(1.1);
}

.geo-circle-outline {
    width: 32px;
    height: 32px;
    border: 3px solid var(--neutral-black);
    border-radius: 50%;
    background: transparent;
}

.geo-circle-solid {
    width: 24px;
    height: 24px;
    background: var(--accent-yellow);
    border-radius: 50%;
}

.geo-line {
    width: 32px;
    height: 6px;
    background: var(--accent-red);
    border-radius: 3px;
}

.geo-triangle {
    width: 0; 
    height: 0;
    border-left: 14px solid transparent;
    border-right: 14px solid transparent;
    border-bottom: 28px solid var(--turquoise-primary);
}

.geo-square {
    width: 24px;
    height: 24px;
    background: var(--neutral-gray-600);
    border-radius: 3px;
}

.logo-text {
    font-family: var(--font-mono);
    font-size: var(--analysis-text);  /* --step-1 autoridad logo */
    font-weight: 600;
    color: var(--neutral-black);
    letter-spacing: var(--letter-spacing-title);  /* 0.08em armonizado */
    line-height: var(--line-height-title);  /* 1.2 consistente */
}

/* Navegación principal */
.main-nav ul {
    display: flex;
    list-style: none;
    gap: var(--nav-padding-h);  /* --space-xs-s armonía perfecta */
    margin: 0;
    padding: 0;
}

.main-nav li {
    list-style: none;
}

.main-nav a {
    font-family: var(--font-primary);
    font-size: var(--nav-text-size);  /* --step-1 autoridad clara */
    color: var(--color-black);
    text-decoration: none;
    font-weight: 400;
    letter-spacing: var(--letter-spacing-title);  /* 0.08em equilibrado */
    padding: var(--nav-padding-v) var(--nav-padding-h);  /* Micro-spacing preciso */
    transition: color 0.2s ease;
    text-transform: uppercase;
    line-height: var(--line-height-title);  /* 1.2 navegación */
}

.main-nav a {
    position: relative;
    overflow: hidden;
}

.main-nav a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--color-black);
    transition: width 0.3s cubic-bezier(0.165, 0.84, 0.44, 1);
}

.main-nav a:hover {
    color: var(--color-black);
}

.main-nav a:hover::after,
.main-nav a.active::after {
    width: 100%;
}

/* Estado activo para navegación */
.main-nav a.active {
    color: var(--color-black);
    font-weight: var(--font-weight-semibold);
}

/* Mobile Menu Toggle */
.menu-toggle {
    display: none; /* Hidden by default on desktop */
    flex-direction: column;
    justify-content: space-around;
    width: 30px;
    height: 25px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 1001; /* Ensure it's above other content */
}

.menu-toggle .hamburger {
    width: 100%;
    height: 3px;
    background: var(--neutral-black);
    border-radius: 5px;
    transition: all 0.3s linear;
    position: relative;
    transform-origin: 1px;
}

.menu-toggle.open .hamburger:nth-child(1) {
    transform: rotate(45deg);
}

.menu-toggle.open .hamburger:nth-child(2) {
    opacity: 0;
    transform: translateX(20px);
}

.menu-toggle.open .hamburger:nth-child(3) {
    transform: rotate(-45deg);
}

/* Hero con video de fondo - no estático */
.hero {
    position: relative;
    width: 100%;
    height: 100vh;
    overflow: hidden;
}

/* Contenedor del video optimizado */
.hero-video-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -2;
}

/* Video de fondo con optimizaciones de rendimiento */
.hero-video {
    position: absolute;
    top: 50%;
    left: 50%;
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
    transform: translate(-50%, -50%);
    object-fit: cover;
    object-position: center;
    
    /* Optimizaciones críticas para rendimiento */
    will-change: auto;
    transform-style: preserve-3d;
    backface-visibility: hidden;
    
    /* Optimización para dispositivos móviles */
    -webkit-transform: translate(-50%, -50%);
    -webkit-backface-visibility: hidden;
}

/* Overlay para mejorar legibilidad */
.hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
        135deg,
        rgba(0, 0, 0, 0.4) 0%,
        rgba(0, 0, 0, 0.2) 50%,
        rgba(0, 0, 0, 0.4) 100%
    );
    z-index: -1;
}

/* Contenido del hero */
.hero-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 1;
    max-width: 600px;
    padding: 0;
    margin: 0;
    background: none;
    backdrop-filter: none;
    border: none;
    outline: none;
    box-shadow: none;
    text-align: center;
    font-weight: 100;
}

/* Mix-blend-mode solo para desktop - deshabilitado en móvil por problemas de rendimiento */
@media (min-width: 769px) and (hover: hover) and (pointer: fine) {
    .hero-content {
        mix-blend-mode: color-burn;
    }
    
    .hero h1 {
        mix-blend-mode: color-burn;
    }
    
    /* Cursor mix-blend-mode solo en desktop */
    .custom-cursor {
        mix-blend-mode: difference;
    }
    
    .custom-cursor-dot {
        mix-blend-mode: difference;
    }
    
    /* Estados hover del cursor solo en desktop */
    .custom-cursor.hover {
        width: 30px;
        height: 30px;
        border: none;
        background: var(--color-yellow);
        mix-blend-mode: normal;
    }

    .custom-cursor.hover-01234 {
        width: 30px;
        height: 26px;
        border: none;
        background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 30 26"><polygon points="15,0 30,26 0,26" fill="%2300FFFF"/></svg>') no-repeat center;
        background-size: contain;
        border-radius: 0;
        mix-blend-mode: normal;
    }

    .custom-cursor-dot.hover {
        opacity: 0;
    }
}

/* Fallback para navegadores sin soporte de video */
.hero-video-fallback {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('../img/sergio-portfolio-complete.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    display: none; /* Oculto por defecto, se muestra solo si el video falla */
}

/* Optimizaciones móviles */
@media (max-width: 768px) {
    .hero {
        min-height: 100vh;
        min-height: 100svh; /* Safe viewport height para móviles */
        padding: 0;
        background-image: url('../img/sergio-arte-plastica.webp');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }
    
    /* Ocultar completamente el contenedor de video en móvil */
    .hero-video-container {
        display: none !important;
    }
    
    .hero-video {
        display: none;
    }
    
    .hero-video-fallback {
        display: none;
    }
    
    /* Ocultar overlay en móvil */
    .hero-overlay {
        display: none !important;
    }
    
    .hero-content {
        background: none;
        backdrop-filter: none;
        border: none;
        outline: none;
        box-shadow: none;
        max-width: calc(100vw - 20px);
        width: calc(100vw - 20px);
        padding: 10px;
        margin: 0;
        left: 50%;
        transform: translate(-50%, -50%);
    }
    
    .hero h1 {
