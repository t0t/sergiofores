/* ===== PERFORMANCE OPTIMIZATIONS ===== */
/* =============================================
   IMAGE OPTIMIZATION CSS
   Performance enhancements for Sergio Forés Portfolio
   ============================================= */

/* Image container - optimized */
.project-screenshot {
    position: relative;
    overflow: hidden;
    background-color: #f3f4f6;
    transition: opacity 0.3s ease;
}

/* Optimized image rendering - pixel perfect */
.project-screenshot img {
    /* Estándar */
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
    
    /* Pixel perfect rendering */
    image-rendering: -webkit-optimize-contrast; /* Safari */
    image-rendering: -moz-crisp-edges; /* Firefox */
    image-rendering: crisp-edges; /* Chrome, Edge */
    image-rendering: pixelated; /* Fallback */
    
    /* Anti-aliasing para nitidez */
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    
    /* Subpixel precision */
    transform: translateZ(0) translate3d(0, 0, 0);
    -webkit-transform: translateZ(0) translate3d(0, 0, 0);
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
    
    /* Prevenir blur en transforms */
    will-change: transform;
    
    /* Transiciones suaves */
    transition: filter 0.3s ease, transform 0.3s ease;
    -webkit-transition: filter 0.3s ease, transform 0.3s ease;
}

/* Video autoplay en project cards - pixel perfect */
.project-screenshot video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
    
    /* Pixel perfect video */
    transform: translateZ(0) translate3d(0, 0, 0);
    -webkit-transform: translateZ(0) translate3d(0, 0, 0);
    backface-visibility: hidden;
    -webkit-backface-visibility: hidden;
    
    /* Prevenir blur en video */
    will-change: transform;
    
    /* Transiciones suaves */
    transition: filter 0.3s ease, transform 0.3s ease;
    -webkit-transition: filter 0.3s ease, transform 0.3s ease;
}

/* WebP support detection */
.no-webp .project-screenshot source[type="image/webp"] {
    display: none;
}

/* Loading skeleton for better UX */
.project-screenshot::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
        90deg,
        transparent,
        rgba(255, 255, 255, 0.4),
        transparent
    );
    animation: shimmer 1.5s infinite;
    z-index: 1;
}

/* Hide shimmer when image is loaded */
.project-screenshot img.loaded ~ .project-screenshot::before,
.project-screenshot:has(img.loaded)::before {
    display: none;
}

/* Alternative for browsers without :has() support */
.project-screenshot.image-loaded::before {
    display: none;
}

@keyframes shimmer {
    0% {
        transform: translateX(-100%);
    }
    100% {
        transform: translateX(100%);
    }
}

